<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#e7e7e7"
    android:clickable="true"
    android:longClickable="true" >
    <RelativeLayout 
        android:id="@+id/type_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"    
        
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/type"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="15dp"
            android:paddingLeft="10dp"
            android:text="未开通啪啪奇的好友"
            android:textColor="#949494"
            android:textSize="24px"
            android:textStyle="bold"
            android:singleLine="true" />

        <View
            android:id="@+id/phone_category_detail_rec_divider_line"
            android:layout_width="fill_parent"
            android:layout_height="0.5px"
            android:layout_marginLeft="10dp"
        	android:layout_marginRight="20dp"
        	android:layout_below="@+id/type"
            android:background="@drawable/card_model_line" />
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/alpha_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"    
        
        android:layout_below="@+id/type_layout"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/alpha"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:text="A"
            android:textColor="#949494"
            android:textSize="24px"
            android:textStyle="bold"
            android:singleLine="true" />

        <View
            android:id="@+id/phone_category_detail_rec_divider_line1"
            android:layout_width="fill_parent"
            android:layout_height="0.5px"
            android:layout_marginLeft="10dp"
        	android:layout_marginRight="20dp"
        	android:layout_below="@+id/alpha"
            android:background="@drawable/card_model_line" />
    </RelativeLayout>
	
    <RelativeLayout
        android:id="@+id/one_row_big_face_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/alpha_layout"
         >

        <RelativeLayout
            android:id="@+id/up_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="62dip" >

            <include
                android:id="@+id/faceIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                layout="@layout/one_row_big_face_icon" />
       

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/faceIcon"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="阿土伯"
                android:textColor="#464646"
                android:textSize="14dip" />

        </RelativeLayout>

        <View
            android:id="@+id/phone_category_detail_rec_divider_line2"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/up_layout"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="5dp"
            android:background="#e7e7e7" />

        <FrameLayout
            android:id="@+id/attentionLayout"
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp" >

            <ImageView
                android:id="@+id/attentionIamge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/attention" />

            <ProgressBar
                android:id="@+id/attentionProgressBar"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:layout_marginRight="5dp"
                android:paddingLeft="2dip"
                android:paddingRight="7dip"
                android:visibility="gone" />
        </FrameLayout>

    </RelativeLayout>

</RelativeLayout>